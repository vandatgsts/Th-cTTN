<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.noteapp_solar">

    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_notes"
        android:label="@string/app_name"
        android:roundIcon="@drawable/ic_notes"
        android:supportsRtl="true"
        android:theme="@style/Theme.Calendar_PhamAnhTruong">
        <activity android:name="com.example.noteapp_solar.ChangePassActivity" />
        <activity
            android:name="com.example.noteapp_solar.DetailNoteActivity"
            android:launchMode="singleTask" />
        <activity android:name="com.example.noteapp_solar.AddNoteActivity" />
        <activity android:name="com.example.noteapp_solar.NoteHomeScreen" />
        <activity
            android:name="com.example.noteapp_solar.Login"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name="com.example.noteapp_solar.MainActivity" />
    </application>

</manifest>